# Production Environment Variables Template
# Copy this file and fill in production values
# NEVER commit actual production values to Git

# ===== DATABASE CONFIGURATION =====
DB_HOST=your-postgres-host.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Individual service databases
TENANTADMIN_DB_NAME=tenantadmin_db
CUSTOMER_DB_NAME=customer_db
VEHICLE_DB_NAME=vehicle_db
WORKORDER_DB_NAME=workorder_db
INVENTORY_DB_NAME=inventory_db
PAYMENT_DB_NAME=payment_db
APPOINTMENT_DB_NAME=appointment_db
FILE_DB_NAME=file_db
AUDIT_DB_NAME=audit_db
NOTIFICATION_DB_NAME=notification_db

# ===== KAFKA CONFIGURATION =====
KAFKA_BOOTSTRAP_SERVERS=your-kafka-cluster:9092
KAFKA_SASL_USERNAME=kafka-user
KAFKA_SASL_PASSWORD=CHANGE_THIS_KAFKA_PASSWORD

# ===== KEYCLOAK CONFIGURATION =====
KEYCLOAK_URL=https://auth.your-domain.com
KEYCLOAK_REALM=autorepairshop
KEYCLOAK_ISSUER_URI=https://auth.your-domain.com/realms/autorepairshop
KEYCLOAK_JWK_SET_URI=https://auth.your-domain.com/realms/autorepairshop/protocol/openid-connect/certs
KEYCLOAK_ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# Keycloak Client Secrets
GATEWAY_CLIENT_SECRET=CHANGE_THIS_GATEWAY_SECRET
SVC_TENANTADMIN_SECRET=CHANGE_THIS_TENANTADMIN_SECRET
SVC_CUSTOMER_SECRET=CHANGE_THIS_CUSTOMER_SECRET
SVC_VEHICLE_SECRET=CHANGE_THIS_VEHICLE_SECRET
SVC_WORKORDER_SECRET=CHANGE_THIS_WORKORDER_SECRET

# ===== MINIO/S3 CONFIGURATION =====
MINIO_ENDPOINT=https://s3.your-region.amazonaws.com
MINIO_ACCESS_KEY=CHANGE_THIS_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_SECRET_KEY
MINIO_BUCKET=autorepairshop-files-prod

# ===== SERVICE URLS (Internal Kubernetes) =====
TENANTADMIN_SERVICE_URL=http://tenantadmin-service:8081
CUSTOMER_SERVICE_URL=http://customer-service:8082
VEHICLE_SERVICE_URL=http://vehicle-service:8083
WORKORDER_SERVICE_URL=http://workorder-service:8084
INVENTORY_SERVICE_URL=http://inventory-service:8085
PAYMENT_SERVICE_URL=http://payment-service:8086
APPOINTMENT_SERVICE_URL=http://appointment-service:8087
FILE_SERVICE_URL=http://file-service:8088
QUERY_BFF_SERVICE_URL=http://query-bff-service:8091

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=https://app.your-domain.com
VITE_API_BASE_URL=https://api.your-domain.com
VITE_KEYCLOAK_URL=https://auth.your-domain.com
VITE_KEYCLOAK_REALM=autorepairshop
VITE_KEYCLOAK_CLIENT_ID=frontend

# ===== CORS CONFIGURATION =====
ALLOWED_ORIGINS=https://app.your-domain.com

# ===== MONITORING =====
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# ===== LOGGING =====
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=prod

# ===== RESOURCE LIMITS =====
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC
